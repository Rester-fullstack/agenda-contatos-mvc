@model IEnumerable<AgendaContatosMVC.Models.Contato>

@{
    ViewData["Title"] = "Agenda de Contatos";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    <form method="get" class="row g-3 mb-4">
        <div class="col-auto">
            <input type="text" name="searchString" value="@Context.Request.Query["searchString"]" class="form-control" placeholder="Buscar por nome..." />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary mb-3">Buscar</button>
        </div>
        <div class="col-auto ms-auto">
            <a href="@Url.Action("Create")" class="btn btn-success mb-3">Novo Contato</a>
        </div>
    </form>

    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nome</th>
                <th>Telefone</th>
                <th>Email</th>
                <th style="width: 150px;">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contato in Model)
            {
                <tr>
                    <td>@contato.Nome</td>
                    <td>@contato.Telefone</td>
                    <td>@contato.Email</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = contato.Id })" class="btn btn-sm btn-warning" title="Editar">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a href="@Url.Action("Details", new { id = contato.Id })" class="btn btn-sm btn-info" title="Detalhes">
                            <i class="bi bi-info-circle-fill"></i>
                        </a>
                        <a href="@Url.Action("Delete", new { id = contato.Id })" class="btn btn-sm btn-danger" title="Excluir">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
